<div
  class="container-fluid bg-dark justify-content-center"
  style="height: 100vh"
>
  <div class="row justify-content-center align-items-center">
    <div class="col-4 bg-light">
      <form method="POST" action="/registro/create">
        <div class="mb-3">
          <label for="name" class="form-label">Nombre:</label>
          <input
            name="name"
            type="name"
            id="name"
            class="form-control"
            id="name"
            required
          />
        </div>
        <div class="mb-3">
          <label for="apellido" class="form-label">Apellido:</label>
          <input
            name="apellido"
            type="apellido"
            id="apellido"
            class="form-control"
            id="apellido"
            required
          />
        </div>
        <div class="mb-3">
          <label for="mail" class="form-label">Mail:</label>
          <input
            name="mail"
            type="email"
            id="mail"
            class="form-control"
            id="mail"
            required
          />
        </div>
        <button type="submit" class="btn btn-primary">Registrate</button>
      </form>
    </div>
  </div>
</div>