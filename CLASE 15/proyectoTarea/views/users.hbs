<div class="container-fluid" style="height: 100vh;">
  <div class="row">
    <div class="col">
      <table class="table table-hover text-center">
        <thead>
          <th>Id</th>
          <th>Nombre</th>
          <th>Pass</th>
          <th></th>
        </thead>
        <tbody>
          {{#each usuarios}}
            <tr>
              <td>{{id}}</td>
              <td>{{username}}</td>
              <td>{{pass}}</td>
              <td><a href="users/single/{{id}}">Ver mas</a></td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>