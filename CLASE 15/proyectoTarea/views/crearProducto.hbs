<div class="container-fluid bg-dark">
  <div
    class="row justify-content-center align-items-center"
    style="height: 100vh;"
  >
    <div class="col-7">
      <form method="post" action="/productos/create">
        <div class="form-group mt-4">
          <input
            type="text"
            class="form-control"
            name="nombre"
            id="nombre"
            placeholder="Ingrese nombre del producto"
          />
        </div>
        <div class="form-group mt-4">
          <input
            type="number"
            class="form-control"
            name="id_categoria"
            id="id_categoria"
            placeholder="Ingrese id_categoria"
          />
        </div>
        <div class="d-grid gap-2">

          <button type="submit" class="btn btn-info mt-4">Crear</button>
        </div>
      </form>
    </div>
  </div>
</div>